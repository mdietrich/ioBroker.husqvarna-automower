{
    "type": "panel",
    "i18n": true,
    "items": {
        "app_key": {
            "newLine": true,
            "type": "text",
            "label": "app_key",
            "help": "app_key_hint",
            "placeholder": "abcd1234-ab12-cd34-ef56-abcdef123456",
            "validator": "data.app_key.match(/[a-zA-Z0-9]{8}-[a-zA-Z0-9]{4}-[a-zA-Z0-9]{4}-[a-zA-Z0-9]{4}-[a-zA-Z0-9]{12}/)",
            "validatorNoSaveOnError": true,
            "sm": 6,
            "md": 4,
            "lg": 4
        },
        "app_secret": {
            "newLine": false,
            "type": "password",
            "label": "app_secret",
            "help": "app_secret_hint",
            "repeat": false,
            "visible": false,
            "placeholder": "abcd1234-ab12-cd34-ef56-abcdef123456",
            "validator": "data.app_secret.match(/[a-zA-Z0-9]{8}-[a-zA-Z0-9]{4}-[a-zA-Z0-9]{4}-[a-zA-Z0-9]{4}-[a-zA-Z0-9]{12}/)",
            "validatorNoSaveOnError": true,
            "sm": 6,
            "md": 4,
            "lg": 4
        },
        "_note": {
            "newLine": true,
            "type": "staticText",
            "label": "note"
        },
        "_helpLink": {
            "newLine": true,
            "type": "staticLink",
            "label": "Readme",
            "noTranslation": true,
            "variant": "contained",
            "color": "primary",
            "button": true,
            "href": "https://github.com/ice987987/ioBroker.husqvarna-automower/blob/main/README.md"
        }
    }
}